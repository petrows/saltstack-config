auto lo
iface lo inet loopback

# LAN interface
iface enp3s0 inet manual

# LAN VMs
auto vmbr0
iface vmbr0 inet static
    hwaddress 00:1b:21:3a:52:c6
    address 10.80.0.2
    netmask 255.255.255.0
    gateway 10.80.0.1
    bridge_ports enp3s0
    bridge_vlan_aware yes
    bridge_stp off
    bridge_fd 0
