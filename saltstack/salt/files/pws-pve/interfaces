auto lo
iface lo inet loopback

# LAN interface
iface enp6s0 inet manual

# DMZ VLAN interface
iface enp6s0.30 inet manual

# LAN VMs
auto vmbr0
iface vmbr0 inet static
    address 192.168.80.2
    netmask 255.255.255.0
    gateway 192.168.80.1
    bridge_ports enp6s0
    bridge_stp off
    bridge_fd 0

# DMZ VMs
iface vmbr-dmz inet static
    address 10.80.1.2
    netmask 255.255.255.0
    gateway 10.80.1.1
    bridge_ports enp6s0.30
    bridge_stp off
    bridge_fd 0
