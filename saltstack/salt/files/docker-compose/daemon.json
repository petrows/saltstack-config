{
    "log-driver": "journald",
    "log-opts": {
        "tag": {% raw %}"{{.Name}}"{% endraw %}
    },
    "ipv6": true,
    "fixed-cidr-v6": "{{ pillar.docker.ipv6_cidr }}",
    {%- if pillar.docker.dns %}
    "dns": ["{{ pillar.docker.dns.split(' ')|join('","') }}"],
    {%- endif %}
    "default-address-pools": [
        {
            "base": "{{ pillar.docker.subnet }}",
            "size": {{ pillar.docker.subnet_size }}
        }
    ]
}
