#!/bin/bash -xe

# Sync fotos from temp p2p folders to permanent Archive

RETAIN_DAYS=$1

if [[ -z "$RETAIN_DAYS" ]]; then
    RETAIN_DAYS=30
fi

if [[ -n "$RETAIN_DAYS" ]]; then
    RETAIN_DAYS="--older $RETAIN_DAYS"
fi

# Petro mobile DCIM
/home/master/bin/exif-sort $RETAIN_DAYS --out '/srv/storage/common/photo/photos/%Y/%Y - Mobile Petro/%Y-%m/' '/srv/storage/home/petro/mobile-photos/Camera/'

# Petro Meta-view photos
/home/master/bin/exif-sort $RETAIN_DAYS --out '/srv/storage/common/photo/photos/%Y/%Y - MetaView/%Y-%m/' '/srv/storage/home/petro/mobile-metaview/'

# Petro Mobile screenshots
/home/master/bin/exif-sort $RETAIN_DAYS --out '/srv/storage/home/petro/screenshots/%Y/' '/srv/storage/home/petro/mobile-pics/Screenshots/'

# Petro instagram pics
/home/master/bin/exif-sort $RETAIN_DAYS --out '/srv/storage/common/photo/photos/%Y/%Y - Instagram/' '/srv/storage/home/petro/mobile-pics/Instagram/'
