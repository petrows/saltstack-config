#!/bin/bash -xe

# Sync fotos from temp p2p folders to permanent Archive

RETAIN_DAYS=$1

if [[ -z "$RETAIN_DAYS" ]]; then
    RETAIN_DAYS=30
fi

if [[ -n "$RETAIN_DAYS" ]]; then
    RETAIN_DAYS="--older $RETAIN_DAYS"
fi

# Petro mobile DCIM
exif-sort $RETAIN_DAYS --out '/mnt/pws-data/storage/common/photo/photos/%Y/%Y - Mobile Petro/%Y-%m/' '/mnt/pws-data/storage/home/petro/mobile-photos/Camera/'

# Petro Meta-view photos
exif-sort $RETAIN_DAYS --out '/mnt/pws-data/storage/common/photo/photos/%Y/%Y - MetaView/%Y-%m/' '/mnt/pws-data/storage/home/petro/mobile-metaview/'

# Petro Mobile screenshots
exif-sort $RETAIN_DAYS --out '/mnt/pws-data/storage/home/petro/screenshots/%Y/' '/mnt/pws-data/storage/home/petro/mobile-pics/Screenshots/'

# Petro instagram pics
exif-sort $RETAIN_DAYS --out '/mnt/pws-data/storage/common/photo/photos/%Y/%Y - Instagram/' '/mnt/pws-data/storage/home/petro/mobile-pics/Instagram/'
